<div id="search">
  <%= form_tag('/trips', :method => 'get', :id => 'search_form') do %>
    <%= text_field_tag :start_location, 'From...', {:class => 'location_autocomplete', :id => 'start_location'} %><br /><br />
    <%= text_field_tag :finish_location, 'To...', {:class => 'location_autocomplete', :id => 'end_location'} %><br /><br />
    
    Departure Range
    <br />
    <br />
    Start: <%= date_select :search, :first_date, :start_year => Date.today.year, :end_year => Date.today.year+1  %><br />
    <br />
    End: <%= date_select :search, :last_date, :start_year => Date.today.year, :end_year => Date.today.year+1  %><br />
    <br />
  <% end %>
  
  <div class="button" id="search_button">Search</div>
</div>

<div id="showTrips">
  <%= render :partial => @trips.reverse %>
</div>
